{
  "name": "privacy-cash-telegram-bot",
  "version": "1.0.0",
  "description": "Telegram bot for Privacy Cash SDK - deposit, withdraw, swap tokens, and monitor balance changes",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "postinstall": "node scripts/patch-privacycash.cjs && node -e \"const fs=require('fs');const src='node_modules/@lightprotocol/hasher.rs/dist/';const dst=src+'browser-fat/es/';fs.copyFileSync(src+'hasher_wasm_simd_bg.wasm',dst+'hasher_wasm_simd_bg.wasm');fs.copyFileSync(src+'light_wasm_hasher_bg.wasm',dst+'light_wasm_hasher_bg.wasm');\""
  },
  "keywords": [
    "telegram",
    "bot",
    "privacy-cash",
    "solana",
    "crypto",
    "wallet"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@solana/spl-token": "^0.4.14",
    "@solana/web3.js": "^1.98.4",
    "bs58": "^6.0.0",
    "dotenv": "^17.2.2",
    "jimp": "^1.6.0",
    "jsqr": "^1.4.0",
    "node-cron": "^3.0.3",
    "node-localstorage": "^3.0.5",
    "privacycash": "^1.1.11",
    "telegraf": "^4.16.3"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@types/node-cron": "^3.0.11",
    "tsx": "^4.19.2",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
